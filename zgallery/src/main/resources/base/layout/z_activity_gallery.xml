<?xml version="1.0" encoding="utf-8"?>
<DependentLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="match_parent"
    ohos:background_element="#000000"
    ohos:id="$+id:mainLayout"
    ohos:orientation="vertical">

    <com.mzelzoghbi.zgallery.CustomViewPager
        ohos:id="$+id:pager"
        ohos:width="match_parent"
        ohos:height="match_parent"
        ohos:below="$id:toolbar"
        ohos:above="$id:imagesHorizontalList"
        />

    <ListContainer
        ohos:id="$+id:imagesHorizontalList"
        ohos:width="match_parent"
        ohos:height="70vp"
        ohos:align_parent_bottom="true"
        ohos:bottom_margin="30vp"
        ohos:top_margin="30vp"
        ohos:left_padding="40vp"/>

</DependentLayout>